# HSOF Docker Compose Environment Variables
# Copy this file to .env and adjust values as needed

# Application Settings
HSOF_PORT=8080
LOG_LEVEL=info

# Database Configuration
DB_PASSWORD=hsof123
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_MAX_MEMORY=2gb

# GPU Configuration
# Use comma-separated GPU indices (0,1) or 'all' for all GPUs
NVIDIA_VISIBLE_DEVICES=all

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Julia Runtime
JULIA_NUM_THREADS=8
JULIA_CUDA_MEMORY_POOL=none

# Performance Tuning
# MCTS parameters
MCTS_BATCH_SIZE=1024
MCTS_MAX_ITERATIONS=10000
MCTS_EXPLORATION_CONSTANT=1.4

# Metamodel settings
METAMODEL_CACHE_TTL=3600
METAMODEL_BATCH_SIZE=512

# Feature selection limits
MAX_FEATURES_STAGE1=5000
MAX_FEATURES_STAGE2=500
MAX_FEATURES_STAGE3=50